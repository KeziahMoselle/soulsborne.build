---
import '@/styles/globals.scss'
import { Toaster } from 'vue-sonner'
import { SquareMenu } from 'lucide-vue-next'
import Logout from '@/components/Auth/Logout.vue'

interface Props {
  title: string;
}

const { title } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html class="h-full" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | soulsborne.build</title>
    <link rel="stylesheet" href="https://use.typekit.net/okw0knf.css">
  </head>
  <body class="flex flex-col justify-between min-h-full bg-background text-white">
    <header class="border-b bg-secondary">
      <div class="container flex justify-between">
        <div class="flex items-center gap-x-4">
          <a class="px-4" href="/">
            <picture>
              <source media="(max-width: 767px)" srcset="/img/elden-ring-icon.png" />
              <source media="(min-width: 768px)" srcset="/img/logo.png" />
              <img class="h-16 py-2 md:h-20 md:w-auto md:py-0" src="/img/logo.png" alt="Current dataset is Elden Ring" />
            </picture>
          </a>

          {user && (
            <div class="flex gap-x-4 items-center">
              <h1>Welcome {user.name}!</h1>
              <Logout client:visible />
            </div>
          )}
        </div>

        <!-- Desktop nav -->
        <nav class="hidden md:block">
          <ul class="flex flex-row gap-x-8 py-7">
            {!user && (
              <li class="font-display text-xl"><a href="/register">Register</a></li>
              <li class="font-display text-xl"><a href="/login">Login</a></li>
            )}
            <li class="font-display text-xl"><a href="/builds">Builds</a></li>
            <li class="font-display text-xl"><a class="button" href="/builder">Create a build</a></li>
          </ul>
        </nav>

        <!-- Mobile nav -->
        <button class="md:hidden">
          <SquareMenu class="size-8" />
        </button>
      </div>
    </header>

    <main class="grow">
      <slot />
    </main>

    <footer class="p-4 bg-secondary border-t">
      <div class="container ">
        <p>footer</p>
      </div>
    </footer>

    <Toaster client:load />
  </body>
</html>
