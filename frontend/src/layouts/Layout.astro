---
import '@/styles/globals.scss'
import { Toaster } from 'vue-sonner'
import { SquareMenu } from 'lucide-vue-next'
import GameSelect from "@/components/molecules/GameSelect.vue"
import Logout from '@/components/Auth/Logout.vue'

interface Props {
  title: string;
}

const { title } = Astro.props;
const { user } = Astro.locals;
---

<!doctype html>
<html class="h-full bg-background text-foreground font-display" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | soulsborne.build</title>
    <link rel="stylesheet" href="https://use.typekit.net/okw0knf.css">
  </head>
  <body class="flex flex-col justify-between min-h-full">
    <header class="border-b bg-secondary">
      <div class="flex justify-between">
        <div class="flex items-center gap-x-4">
          <GameSelect client:load />

          {user && (
            <div class="flex gap-x-4 items-center">
              <h1>Welcome {user.name}!</h1>
              <Logout client:visible />
            </div>
          )}
        </div>

        <!-- Desktop nav -->
        <nav class="hidden py-4 md:pr-20 md:block">
          <ul class="flex items-center flex-row gap-x-8">
            {!user && (
              <li class="font-display text-xl leading-5">
                <a href="/register">Register</a>
              </li>
              <li class="font-display text-xl leading-5">
                <a href="/login">Login</a>
              </li>
            )}
            <li class="font-display text-xl leading-5" title="Coming in v3">
              <a class="text-white opacity-40 cursor-not-allowed pointer-events-none" href="/lore-tree">Lore tree</a>
            </li>
            <li class="font-display text-xl leading-5" title="Coming in v2">
              <a class="text-white opacity-40 cursor-not-allowed pointer-events-none" href="/fashion">Fashion souls</a>
            </li>
            <li class="font-display text-xl leading-5">
              <a href="/builds">Builds</a>
            </li>
            <li class="font-display text-xl leading-5">
              <a class="button" href="/builder">Create a build</a>
            </li>
          </ul>
        </nav>

        <!-- Mobile nav -->
        <button class="pr-4 md:hidden">
          <SquareMenu class="size-8" />
        </button>
      </div>
    </header>

    <main class="grow">
      <slot />
    </main>

    <footer class="p-4 bg-secondary border-t">
      <div class="container ">
        <p>footer</p>
      </div>
    </footer>

    <Toaster client:load />
  </body>
</html>
